<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0"
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Label="NuGet">
    <RepositoryUrl>https://github.com/frankebersoll/EventFlow.Extensions</RepositoryUrl>
    <PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
    <PackageId>FrankEbersoll.$(MSBuildProjectName)</PackageId>
    <Authors>Frank Ebersoll</Authors>
    <Copyright>Copyright © $([System.DateTime]::Now.Year) Frank Ebersoll. All rights reserved.</Copyright>
    <Description>Unofficial extensions for the EventFlow framework (https://github.com/eventflow/EventFlow)</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup Label="SourceLink" Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup Label="SourceLink" Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <EmbeddedFiles Include="$(VersionSourceFile)" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Nerdbank.GitVersioning">
      <Version>3.2.31</Version>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>